/* components/btplay/btplay.wxss */

.btplay .bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-top: 2rpx solid #f2f2f2;
  z-index: 10;
  padding: 10rpx;
}

.btplay .bottom .bt-left {
  display: flex;
  width: 75%;
}

.btplay .bottom .bt-left .img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.btplay .bottom .bt-left .notes {
  font-size: 30rpx;
  padding-left: 10rpx;
  width: 80%;
}
.btplay .bottom .bt-left .notes .name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.btplay .bottom .bt-left .notes .arname {
  color: #969696;
  font-size: 20rpx;
}

.btplay .bottom .bt-right .suspend {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.btplay .bottom .bt-right .img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}
