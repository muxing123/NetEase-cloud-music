/* components/radiolist/radiolist.wxss */
.radiolist .scrollset {
  height: 900rpx;
}
.radiolist .scrollset .title {
  font-size: 30rpx;
  font-weight: bold;
  padding: 30rpx 10rpx;
}
.radiolist .scrollset .item {
  display: flex;
  padding: 10rpx;
}
.radiolist .scrollset .item .left .pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.radiolist .scrollset .item .right {
  padding: 10rpx 0 10rpx 30rpx; 
  font-size: 30rpx;
  width: 80%;
}
.blue {
  color: #045d7e;
}
.radiolist .scrollset .item .right .name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.radiolist .scrollset .item .right .artist {
  font-size: 26rpx;
  color: #8a8a8a;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-top: 6rpx;
}